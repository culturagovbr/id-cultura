{% extends '::base.html.twig' %}

{% block metatags %}
{{ parent() }}
<meta property="creator.productor" content="http://estruturaorganizacional.dados.gov.br/id/unidade-organizacional/102521">
<meta property="og:site_name" content="{% trans %}Login CidadÃ£o{% endtrans %}"/>
<meta property="og:description" content="{% trans %}With only one account, the citizen will be able to use government's digital services.{% endtrans %}"/>
{% image '@LoginCidadaoCoreBundle/Resources/public/images/facebook-image.png' %}
<meta property="og:image" content="{{ app.request.scheme ~'://' ~ app.request.host ~ asset_url }}" />
{% endimage %}
<meta property="fb:app_id" content="{{ facebook_app_id }}"/>
{% endblock %}

{% block header %}
<div id="barra-brasil" style="background:#7F7F7F; height: 20px; padding:0 0 0 10px;display:block;">
	<ul id="menu-barra-temp" style="list-style:none;">
		<li style="display:inline; float:left;padding-right:10px; margin-right:10px; border-right:1px solid #EDEDED"><a href="http://brasil.gov.br" style="font-family:sans,sans-serif; text-decoration:none; color:white;">Portal do Governo Brasileiro</a></li>
		<li><a style="font-family:sans,sans-serif; text-decoration:none; color:white;" href="http://epwg.governoeletronico.gov.br/barra/atualize.html">Atualize sua Barra de Governo</a></li>
	</ul>
</div>
{{ include("LoginCidadaoCoreBundle::navbar.html.twig") }}
{% endblock %}

{% block sidebar %}{% endblock %}

{% block footer %}
{% set columns = 'container' %}
    {{ include("IdCulturaBundle::footer.html.twig") }}
{% endblock %}

{% block stylesheets %}
	{% block stylesheets_custom %}
	    {% stylesheets '@lc_base_css' filter='cssrewrite' filter='?uglifycss' %}
			<link rel="stylesheet" href="{{ asset_url }}" />
	    {% endstylesheets %}
    {% endblock %}
    {% stylesheets 'bundles/logincidadaocore/css/ie/ie7.css' filter='cssrewrite' filter='?uglifycss' %}
        <!--[if IE 7]>
          <link rel="stylesheet" href="{{ asset_url }}" />
        <![endif]-->
    {% endstylesheets %}
    {% stylesheets 'bundles/logincidadaocore/css/ie/ie8.css' filter='cssrewrite' filter='?uglifycss' %}
        <!--[if IE 8]>
          <link rel="stylesheet" href="{{ asset_url }}" />
        <![endif]-->
    {% endstylesheets %}
    {% stylesheets 'bundles/logincidadaocore/css/ie/ie9.css' filter='cssrewrite' filter='?uglifycss' %}
        <!--[if IE 9]>
          <link rel="stylesheet" href="{{ asset_url }}" />
        <![endif]-->
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts
    	'@lc_base_js'
        filter='?uglifyjs2'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
