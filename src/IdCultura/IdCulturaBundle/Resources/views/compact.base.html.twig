{% extends 'IdCulturaBundle::base.html.twig' %}
{% block header %}
<div id="barra-brasil" style="background:#7F7F7F; height: 20px; padding:0 0 0 10px;display:block;">
	<ul id="menu-barra-temp" style="list-style:none;">
		<li style="display:inline; float:left;padding-right:10px; margin-right:10px; border-right:1px solid #EDEDED"><a href="http://brasil.gov.br" style="font-family:sans,sans-serif; text-decoration:none; color:white;">Portal do Governo Brasileiro</a></li>
		<li><a style="font-family:sans,sans-serif; text-decoration:none; color:white;" href="http://epwg.governoeletronico.gov.br/barra/atualize.html">Atualize sua Barra de Governo</a></li>
	</ul>
</div>

{% endblock %}
{% block footer %}
    {{ include('LoginCidadaoCoreBundle::compact.base.footer.html.twig') }}
{% endblock %}

{% block body %}
    <div class="vertical-center-with-footer">
        <div class="panel panel-compact center-block">
            <div class="panel-heading">
                <div class="heading-container">
                    {{ include('LoginCidadaoCoreBundle::common.compact.logo.html.twig') }}
                </div>
                <div class="heading-container buttons text-right">
                    {% block top_buttons %}
                        {% if app.user != null %}
                            <a href="{{ path('fos_user_security_logout') }}" class="btn btn-compact-text btn-compact-logout">
                                {{ 'compact.logout.button' | trans }}
                            </a>
                        {% endif %}
                    {% endblock %}
                </div>
            </div>
            <div class="panel-body {% block panel_body_class %}{% endblock %}">
                {% block panel_body %}
                {% endblock %}
            </div>
            <div class="panel-footer {% block panel_footer_class %}hidden{% endblock %}">
                {% block panel_footer %}
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets_custom %}
    {% stylesheets '@lc_compact_layout_css' filter='cssrewrite' filter='?uglifycss' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}
